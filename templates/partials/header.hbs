                        <a href="#">Link 3</a>
                    </div>
                </div>
                <li class="px-2 py-1"><a class="text-dark" style="font-size:22px" href="/contact">Contact</a>
                </li>
            </ul>
            <ul class="nav-icons">
                {{#if isAuthenticated}}
                
                <li><a href="/mypathshala" class="profile text-dark" target="_blank"><img style="width:50px;" src="/Assets/images/pathshala.png" alt=""></a></li>
                <li><a href="/profile" class="profile text-dark" target="_blank"><img style="width:50px;" src="/Assets/images/profileico.png" alt=""></a></li>
                <li><a href="/cart"><img class="cart" style="width:50px; height:40px" src="/Assets/images/ico.png" alt=""></a></li>
                {{else}}
                <li><button class="btn btn-secondary fs-6 fw-bold"><a href="/login" class="text-white"
                            target="_blank">Login</a></button></li>
                <li><button class="btn btn-primary fs-6 fw-bold"><a href="/register" class="text-white"
                            target="_blank">Register</a></button></li>
                {{/if}}

            </ul>
        </nav>
    </header>
    <script>
        $(document).ready(function () {
            const Text = "Shruti-Sangam";
            const typingElement = $("#title");
            let index = 0;
            function type() {
                if (index < Text.length) {
                    typingElement.text(typingElement.text() + Text.charAt(index)); // Fix: Use text() method to set text content
                    index++;
                    setTimeout(type, 100);
                }
            }
            setTimeout(type, 1000);
        });
    </script>
</body>

</html>